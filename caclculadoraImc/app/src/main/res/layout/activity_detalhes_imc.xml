<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DetalhesImcActivity">

    <TextView
        android:id="@+id/textview_seu_imc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/seu_imc"
        android:textAllCaps="true"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textview_saida_imc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_seu_imc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/xxxx"
        android:textColor="#ff6f00"
        android:textSize="40sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/textview_resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/resultado"
        android:layout_below="@+id/textview_saida_imc"
        android:textAllCaps="true"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textview_saida_resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_resultado"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/xxxx"
        android:textAllCaps="true"
        android:textColor="#ff6f00"
        android:textSize="40sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/textview_saida_detalhes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/xxxx"
        android:layout_below="@+id/textview_saida_resultado"
        android:layout_marginTop="20dp"
        android:padding="8dp"
        android:textColor="#000"
        android:textSize="20sp"
        android:fontFamily="sans-serif"/>

</RelativeLayout>